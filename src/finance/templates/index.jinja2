{% extends "layout.jinja2" %}

{% block content %}

<div class="row">
    <div class="col-md-6">
        <h2 class="text-center">Asset Class</h2>
        <div id="pieAsset"></div>
    </div>
    <div class="col-md-6">
        <h2 class="text-center">Country</h2>
        <div id="pieCountry"></div>
    </div>
</div>

<div class="row">
    <div class="col-md-12">
        <p>Total Market Value: </p><p id="totalValue"></p>
    </div>
 </div>
{% endblock %}

{% block scripts %}
{{ super() }}
<script src="/static/finance/scripts/chart.js"></script>
<script>
    $(document).ready(function(){
        $.getJSON("{{ url_for('finance_page.sum_json')}}",
            function (data){
                $('#pieAsset').highcharts(pieChartOptions(null, 'Market Value', data['asset'], false));
                $('#pieCountry').highcharts(pieChartOptions(null, 'Market Value', data['country'], false));
                $('#totalValue').text(data['total'].toLocaleString());
            });
    });
</script>
{% endblock %}
