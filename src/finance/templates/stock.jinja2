            <tfoot>
                <tr>
                    <th>Xccy Date</th>
                    <th><div id="xccy_date"></div></th>
                    <th></th>
                    <th></th>
                    <th></th>
                    <th class="text-right"><div id="avg-cost"></div></th>
                    <th class="text-right"><div id="avg-cost-jpy" ></div></th>
