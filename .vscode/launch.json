    "version": "0.2.0",
    "configurations": [
        {
            "name": "Run Angular Test",
            "type": "node",
            "request": "launch",
            "skipFiles": ["<node_internals>/**"],
            "console": "integratedTerminal",
            "program": "${workspaceFolder}/node_modules/.bin/ng",
            "args": ["test"],
            "outFiles": ["${workspaceFolder}/**/*.js"],
            "env": {
                "NODE_OPTOINS": "",
            }
        },
        {
            "name": "Finance",
            "type": "python",
            "request": "launch",
            "program": "src/runserver.py",
            "console": "integratedTerminal",
            "env": {
                "FLASK_APP": "finance",
                "FLASK_ENV": "development",
                "FLASK_DEBUG": "0",
                "PYTHONPATH": "src",
                "FINANCE_DB": "/home/mu/work/finance.db"
            },
            "args": [
                "8080",
            ],
        },
        {
            "name": "Current file",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "args": [
                "avg",
                "-d 10",
            ]
        }
    ]
}