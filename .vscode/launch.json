    "version": "0.2.0",
    "configurations": [
        {
            "type": "firefox",
            "request": "attach",
            "name": "Attach to Karma",
            "address": "localhost",
            "url": "http://localhost:9876/debug.html",
            "restart": true,
            "port": 9222,
            "timeout": 600000,
            "sourceMaps": true,
            "webRoot": "${workspaceFolder}/finance-ng",
            "pathMapping": {
              "/_karma_webpack_": "${workspaceFolder}/finance-ng"
            }
        },
        /*        
        {
            "name": "Run Angular Test",
            "type": "firefox",
            "request": "launch",
            "url": "http://localhost:9876/debug.html",
            "webRoot": "${workspaceFolder}",
            "runtimeArgs": [
              "--headless"
            ],
            "sourceMaps": true,
            "sourceMapPathOverrides": {
              "webpack:/*": "${webRoot}/*",
              "/./*": "${webRoot}/*",
              "/src/*": "${webRoot}/*",
              "/*": "*",
              "/./~/*": "${webRoot}/node_modules/*"
            },
            "port": 9223            
        },*/
        {
            "name": "Finance",
            "type": "python",
            "request": "launch",
            "program": "src/runserver.py",
            "console": "integratedTerminal",
            "env": {
                "FLASK_APP": "finance",
                "FLASK_ENV": "development",
                "FLASK_DEBUG": "0",
                "PYTHONPATH": "src",
                "FINANCE_DB": "/home/mu/work/finance.db"
            },
            "args": [
                "8080",
            ],
        },
        {
            "name": "Current file",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "args": [
                "avg",
                "-d 10",
            ]
        }
    ]
}